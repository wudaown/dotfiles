alias ls='ls --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias ll='ls -lh --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias la='ls -lha --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias grep='grep --color=tty -d skip'
# alias cp="cp -i"                        # Confirm before overwriting something
alias df='df -h'                        # Human-readable sizes
alias free='free -m'                    # Show sizes in MB
alias fixit='sudo rm -f /var/lib/pacman/db.lck && sudo pacman-mirrors -g && sudo pacman -Syyuu && sudo pacman -Suu'
alias bspwmrc='nano ~/.config/bspwm/bspwmrc'
alias sxhkdrc='nano ~/.config/sxhkd/sxhkdrc'
alias x='startx ~/.xinitrc' # Type name of desired desktop after x, xinitrc is configured for it
alias autostart='nano ~/.config/bspwm/autostart'
alias repoup='repo-add local-repo.db.tar.gz *.pkg.tar.*'
alias update='sudo pacman -Syyu --ignore nvidia-utils'
alias install='sudo pacman -S'
alias search='pacman -Ss'
alias remove='sudo yay -Rs'
alias aurupdate='yay -Su --aur'
alias open='xdg-open'
alias mkdir='mkdir -p -v'
alias cleanlog='sudo rm -rv /var/log/journal/*'
alias location='curl haoip.cn/'
alias cpuclock='watch -d "cat /proc/cpuinfo | grep -i Mhz"'
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias dephexo='hexo g; hexo d'
alias cpu='watch -d "cat /proc/cpuinfo | grep -i Mhz"'
alias takeover="tmux detach -a"
alias ncmpcpp='ncmpcpp -S visualizer'
alias resizeimg="mogrify -resize 300x300 *.png"
alias lpack="pacman -Qqe"
alias husage='du -sch $home/* | grep g'
alias hidusage='du -sch $home/.* | grep g'
alias upgrub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias rsync='rsync -aaxv'
alias startss='systemctl start shadowsocks-libev@config.service'
alias stopss='systemctl stop shadowsocks-libev@config.service'
alias systemwideproxy='redsocks -c /etc/redsocks.conf & ; iptables.sh start 104.199.192.179'
alias systemwidestop='pgrep redsocks | xargs kill -9 ; iptables.sh stop'
alias gp='echo "R2rMsH^6vFZ2"'
#alias scptar='ssh root@192.168.0.67 'tar -cf - /root/downloadImage/stm | gzip -9' > file.tar.gz'
alias cpumon=' watch grep \"cpu MHz\" /proc/cpuinfo '
alias graph='git log --all --decorate --oneline --graph'
alias burn='for i in `seq 1 $(cat /proc/cpuinfo |grep "physical id" |wc -l)`; do dd if=/dev/zero of=/dev/null & done'
alias ohzsh='sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"'
alias grep='grep -i'
alias pacclean='yay -Scc'
alias pacunuse='yay -Yc'
alias ls='logo-ls'
